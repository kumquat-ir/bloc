{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "buildrun",
			"type": "shell",
			"command": "nimble run bloc",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "builddbg",
			"command": "nimble",
			"args": [
				"build",
				"-g",
				"--debugger:native"
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"type": "shell",
			"problemMatcher": []
		}
	]
}
